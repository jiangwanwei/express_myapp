include ./header.jade
- var genders = {m: '男', f: '女', x: '保密'}
.ui.grid
    .four.wide.column
        a.avatar(
            href='/posts?author=#{user._id}'
            data-title='#{user.name} | gender[user.gender]'
            data-content='#{user.bio}')
            img.avatar(src='/img/#{user.avatar}')
    .eight.wide.column
        form.ui.form.segment(method='post' action='/posts/#{post._id}/edit' enctype="multipart/form-data")
            .field.required
                label 标题
                input(type="text", name="title" value='#{post.title}')            
            .field.required
                label 内容
                textarea(name="content" rows="15")= post.content
            input.ui.button(type="submit", value="发布")
include ./footer.jade