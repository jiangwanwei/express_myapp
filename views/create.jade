include ./header.jade
.ui.grid
    .four.wide.column
        - var genders = {m: '男', f: '女', x: '保密'}
        a.avatar.avatar-link(
            href='/posts?author=#{user._id}', 
            data-title='#{user.name} | #{genders[user.gender]}',
            data-content='#{user.bio}')
            img.avatar(src='/img/#{user.avatar}')
    .eight.wide.column
        form.ui.form.segment(method='post', enctype="multipart/form-data")
            .field.required
                label 标题
                input(type='text' name='title')
            .field.required
                label 内容
                textarea(name="content", rows="15")
            input.ui.button(type="submit", value="发布")
include ./footer.jade

